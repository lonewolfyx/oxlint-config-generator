{
    "name": "oxlint",
    "type": "module",
    "description": "Oxlint Config Generator is a powerful tool designed to generate and manage oxlint configuration files. It provides an intuitive interface that helps developers quickly create, customize, and optimize oxlint configurations without manually writing complex configuration files.",
    "packageManager": "pnpm@10.28.2",
    "homepage": "https://github.com/lonewolfyx/oxlint",
    "bugs": {
        "url": "https://github.com/lonewolfyx/oxlint/issues"
    },
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "typecheck": "nuxt typecheck",
        "lint": "eslint .",
        "lint:fix": "eslint --fix",
        "prepare": "simple-git-hooks"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "@vueuse/core": "^14.2.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-vue-next": "^0.545.0",
        "reka-ui": "^2.7.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "vue": "^3.5.26",
        "vue-router": "^4.6.4"
    },
    "devDependencies": {
        "@nuxt/content": "^3.10.0",
        "@nuxt/eslint": "^1.12.1",
        "@nuxt/icon": "^2.1.1",
        "@vueuse/nuxt": "^14.1.0",
        "eslint": "^9.39.2",
        "lint-staged": "^16.2.7",
        "nuxt": "^4.2.2",
        "oxlint": "^1.48.0",
        "picocolors": "^1.1.1",
        "shadcn-nuxt": "^2.4.3",
        "simple-git-hooks": "^2.13.1",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "node scripts/verify-commit.js"
    },
    "license": "MIT",
    "lint-staged": {
        "*": "eslint --fix"
    }
}
